(*! Option represents existance or absence of a value. *)
let Option[T] :: = enum {
	some :: struct { value: T },
	none :: (),
}

(*! Result represents success (ok) or failure (err). *)
let Result[T, E] :: = enum {
	ok :: struct { value: T },
	err :: struct { error: E },
}

let String :: ()
= struct {
	str: string,
	size: usize,
} with {
	let new :: () 
	= Self {
		.str = "",
		.size = 0,
	}

	let from :: str
	= Self {
		.str = str,
		.size = 0,
	}
}
