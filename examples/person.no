let Person ::
  name, age,
  mut& id,
  ?income = 1000
= {
  defer id += 1;

  #[mutable(age, income)]
  #[derive(Showing)]
  struct {
    name  : string = name,
    age   : i8     = age,
    id    : i32    = id,
    income: i32    = income,
  }
}

let main :: () = {
  let p1 = Person("Ashton", 19, 0, income = 0); (* Hashtag unemployed *)
  println!("p1: {s}", p1.show());
}
